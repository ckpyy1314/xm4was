<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
    <extension point="com.ibm.wsspi.extension.applicationserver-startup">
        <components>
            <component startup="5000"
                       class="com.googlecode.xm4was.threadmon.impl.ThreadMonitor"
                       processType="Servant"
                       component-id="XM_ThreadMonitor"
                       startup-mode="immediate">
                <services>
                    <provide interface="com.googlecode.xm4was.threadmon.UnmanagedThreadMonitor"/>
                </services>
            </component>
        </components>
    </extension>
    <extension point="com.ibm.wsspi.extension.mbean-provider"/>
</plugin>
